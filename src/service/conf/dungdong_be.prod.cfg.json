{
    "environment": "production",
    "project_name": "DungDong_BE",
    "host": "localhost",
    "port": 3000,
    "secret_key": "changethis-secret-key",
    "access_token_expire_minutes": 1440,

    "http_config": {
      "allow_origins": ["http://localhost:8000"],
      "allow_methods": ["*"],
      "allow_headers": ["*"],
      "allow_credentials": true
    },
    
    "llm": {
      "provider": "gemini",
      "model": "gemini-2.0-flash-lite"
    },
  
    "logger": {
        "level": "debug",
        "path": "./logs/dungdong_be.log-%DATE%",
        "suffix": "%Y-%m-%d",
        "max_bytes": 10485760,
        "max_files": "3d",
        "rotation": "daily",
        "use_console": true
    }  
}
  